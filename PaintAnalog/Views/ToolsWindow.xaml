<Window x:Class="PaintAnalog.Views.ToolsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tools" Height="200" Width="300">
    <StackPanel>
        <Button Content="Brush" Click="BrushSelected" Style="{StaticResource ToolBarButtonStyle}" />
        <Button Content="Eraser" Click="EraserSelected" Style="{StaticResource ToolBarButtonStyle}" />
        <Button Content="Fill" Click="FillSelected" Style="{StaticResource ToolBarButtonStyle}" />
        <Button Content="Selection" Click="SelectionSelected" Style="{StaticResource ToolBarButtonStyle}" />
    </StackPanel>
</Window>
