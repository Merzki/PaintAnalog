<Window x:Class="PaintAnalog.ResizeCanvasDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Resize Canvas" Height="150" Width="300" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal" Margin="0,5">
            <TextBlock Text="Width:" VerticalAlignment="Center" Width="50" FontWeight="Bold" />
            <TextBox x:Name="WidthBox" Width="200" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,5">
            <TextBlock Text="Height:" VerticalAlignment="Center" Width="50" FontWeight="Bold" />
            <TextBox x:Name="HeightBox" Width="200" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,5">
            <Button Content="OK" Style="{StaticResource ToolBarButtonStyle}" Click="OkButton_Click" />
            <Button Content="Cancel" Style="{StaticResource ToolBarButtonStyle}" Click="CancelButton_Click" />
        </StackPanel>
    </StackPanel>
</Window>
