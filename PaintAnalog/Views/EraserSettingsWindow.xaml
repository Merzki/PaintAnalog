<Window x:Class="PaintAnalog.Views.EraserSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Eraser Settings" Height="200" Width="300">
    <Grid Margin="10">
        <TextBlock Text="Thickness" VerticalAlignment="Top" FontWeight="Bold" Margin="10,10,0,5" />
        <Slider x:Name="ThicknessSlider" Minimum="1" Maximum="50" Style="{StaticResource CustomSliderStyle}" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom">
            <Button Content="OK" Click="Confirm_Click" Style="{StaticResource ToolBarButtonStyle}" />
            <Button Content="Cancel" Click="Cancel_Click" Style="{StaticResource ToolBarButtonStyle}" />
        </StackPanel>
    </Grid>
</Window>
